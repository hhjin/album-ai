      {{#if searchResults}}
        <div class="mt-10">
          <h2 class="text-2xl font-bold"> ✨ {{searchQuery}} ✨  - 搜索结果:</h2>
          <div id="searchResults" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {{#each searchResults}}
              <img id="{{this.fId}}" src="{{this.url}}" alt="{{this.path}} {{this.score}}  {{#if this.photo_time}}|{{this.photo_time}}{{else}}{{''}}{{/if}}"  class="w-full h-48 object-cover rounded-lg cursor-pointer" >
            {{/each}}
