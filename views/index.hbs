      {{/if}}

      {{#if surroundingImages}}
        <div class="mt-10">
          <h4 class="text-2xl font-bold">   {{path_of_parentImage }}</h4>
          <h2 class="text-2xl font-bold"> ✨ 相邻图片 ✨  </h2>
          <div id="surroundingImages" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {{#each surroundingImages}}
              <img id="{{this.fId}}" src="{{this.url}}" alt="{{this.path}}  {{#if this.photo_time}}|{{this.photo_time}}{{else}}{{''}}{{/if}}"   class="w-full h-48 object-cover rounded-lg cursor-pointer" >
            {{/each}}
          </div>
        </div>
      {{/if}}

      {{#if nearbyImages}}
        <div class="mt-10">
          <h2 class="text-2xl font-bold"> ✨ 附近图片 ✨ </h2>
          <div id="nearbyImages" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {{#each nearbyImages}}
              <img id="{{this.fId}}" src="{{this.url}}" alt="{{this.path}}  {{#if this.photo_time}}|{{this.photo_time}}{{else}}{{''}}{{/if}}" class="w-full h-48 object-cover rounded-lg cursor-pointer" >
            {{/each}}
          </div>
        </div>
      {{/if}}

      <hr>
      <hr>

          <!-- Chat input query form -->
        <div class="mt-10">
          <h2 class="text-2xl font-bold">与相册对话</h2>
          <form action='/' method='get' class="flex my-4">
              ✨ <input
                type='text'
                name='query'
                placeholder='对话...'
                value='{{query}}'
